<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ViewFlipper
        android:id="@+id/view_flipper_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/kcoin_and_praise_container"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/targe_count_bg"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/chat_praise_top_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="2dp"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/head_praise"
                    android:singleLine="true"
                    android:text="10"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/kcoin_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/kcoin_diamond"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/k_diamond"/>

                    <TextView
                        android:id="@+id/kcoin_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="2dp"
                        android:text="10"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/star_num"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/targe_count_bg"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/head_praise"
                android:gravity="center_vertical"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/first_recharge_gift_num"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/targe_count_bg"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/first_recharge_gift_anchor"
                android:gravity="center_vertical"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_rank_item"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_leader_board_rank_popular"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rank_type_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/right_arrow"/>
        </LinearLayout>
    </ViewFlipper>

</FrameLayout>
